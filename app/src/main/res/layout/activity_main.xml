                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"
                            android:shrinkColumns="*"
                            >
                            <TableRow >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LAT"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/tvLat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingStart="10dp"
                                    android:text="0.00000"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LON"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                                <TextView
                                    android:id="@+id/tvLon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:text="0.00000"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ALT"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                                <TextView
                                    android:id="@+id/tvAlt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:text="0.00 m"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DWP"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                                <TextView
                                    android:id="@+id/tvDwp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:text="0.00 m"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="G.S."
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                                <TextView
                                    android:id="@+id/tvGroundSpeed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:textStyle="bold"
                                    android:text="0.00 m/s"
                                    android:textColor="#000000" />
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="V.S."
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                                <TextView
                                    android:id="@+id/tvVerticalSpeed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:text="0.00 m/s"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="YAW"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                                <TextView
                                    android:id="@+id/tvYaw"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:textStyle="bold"
                                    android:text="0.00 "
                                    android:textColor="#000000" />
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="D.H."
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                                <TextView
                                    android:id="@+id/tvDistanceToHome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:text="0.00 "
                                    android:textStyle="bold"
                                    android:textColor="#000000" />
                            </TableRow>
                        </TableLayout>
                    </com.google.android.material.card.MaterialCardView>
                </TableRow>
            </TableLayout>

