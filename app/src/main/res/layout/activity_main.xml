<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fafafa"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="46dp"
        >


    <!--map layout-->

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </androidx.fragment.app.FragmentContainerView>

        <!--map overlay layout-->
        <LinearLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <!--latLon alt timer-->
            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="0,6"
                >
                <TableRow >
                    <LinearLayout android:orientation="vertical"
                        android:layout_column="0">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/swapContainer"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#303030"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="30dp"
                        app:strokeColor="#303030"
                        android:clickable="true"
                        >
                    </com.google.android.material.card.MaterialCardView>
                        <LinearLayout
                            android:id="@+id/tableLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#f0f0f0"
                            >
                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                />
                            <ImageView
                                android:id="@+id/btnSpinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_small_right_24"
                                android:background="#bfbfbf"
                                />

                        </LinearLayout>
                   <!--     <Button
                            android:id="@+id/btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button"
                            />-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnArmDisarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="1"
                        android:padding="5dp"
                        android:background="@drawable/bg_border"
                        android:clickable="true"
                        android:alpha="0.7"
                        android:layout_marginStart="10dp"
                        >
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00ffffff"
                            android:src="@drawable/drone_24"
                            android:layout_gravity="center"
                            app:tint="#000000"
                            android:clickable="false"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="Arm/Disarm"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnTakeOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="2"
                        android:padding="5dp"
                        android:background="@drawable/bg_border"
                        android:clickable="true"
                        android:alpha="0.7"
                        android:layout_marginHorizontal="10dp"
                        android:focusable="true">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00ffffff"
                            app:tint="#000000"
                            android:src="@drawable/drone_alt_24"
                            android:layout_gravity="center"
                            android:clickable="false"
                            />

                        <!--on below line we are creating a
                             text for our image button-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="TakeOff"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnMission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="3"
                        android:padding="5dp"
                        android:background="@drawable/bg_border"
                        android:clickable="true"
                        android:alpha="0.7"
                        android:layout_marginHorizontal="10dp"
                        >
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00ffffff"
                            android:src="@drawable/flag_24"
                            android:layout_gravity="center"
                            app:tint="#000000"
                            android:clickable="false"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="Mission"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_column="4"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/bg_border"
                        android:alpha="0.7"
                        android:layout_marginHorizontal="10dp"
                        android:padding="8dp"
                        >
                        <ImageButton
                            android:id="@+id/btnZoomIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00ffffff"
                            android:src="@drawable/square_plus_24"
                            android:layout_gravity="center"
                            app:tint="#000000"
                            android:clickable="false"
                            />
                        <ImageButton
                            android:id="@+id/btnZoomOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00ffffff"
                            android:src="@drawable/square_minus_24"
                            android:layout_gravity="center"
                            app:tint="#000000"
                            android:clickable="false"
                            />
                    </LinearLayout>
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:strokeColor="#000000"
    app:strokeWidth="2dp"
    app:cardCornerRadius="50dp"
    android:layout_margin="5dp"
    android:layout_column="5"
    >

    <ImageView
        android:id="@+id/blinker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/blinker"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp" />
</com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp"
                        app:strokeColor="#f8f8f8"
                        android:layout_column="6"
                        android:layout_marginStart="50dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
